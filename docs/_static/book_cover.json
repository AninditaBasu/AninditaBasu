{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Book cover API",
    "description": "API for retrieving book cover images<br/><a href = 'https://archive.org/developers/'>Internet Archive Developer Portal</a>"
  },
  "host": "archive.org",
  "schemes": [
    "https"
  ],
  "basePath": "/",
  "produces": [
    "application/json",
    "application/javascript"
  ],
  "paths": {
    "/services/img/{itemid}": {
        "get": {
            "description": "An archive.org item identifier having mediatype text (for example, the ID of a book).",
            "parameters": [
                {
                    "name": "itemid",
                    "description": "Try with `theworksofplato01platiala` as the ID. Or, see <a href = 'https://archive.org/developers/tutorial-find-identifier-item.html'>how to find the unique identifier of an item</a>.",
                    "in": "path",
                    "type": "string",
                    "required": true
                }
            ],
            "responses": {
                "200": {
                    "description": "Item metadata"
                },
                "400": {
                    "description": "Invalid request"
                }
            }
        }
    }
  }
}